{% extends 'layout/layout.twig' %}

{% block subtitle %}Create a New Pen{% endblock %}

{% block description %}{% endblock %}

{% block main %}
    <main class="text-center">
        <form class="form" method="post" action={{ url('pen!create') }}>
            <fieldset>
                <legend>
                    <i class="fab fa-github fa-fw fa-2x" aria-hidden="true"></i>
                </legend>
                <ul>
                    <li>
                        <label for="name">Name</label>
                        <input id="name" name="name" type="text" placeholder="Pen Name" maxlength="50" required>
                    </li>
                    <li>
                        <label for="link">Link</label>
                        <input id="link" name="link" type="text" placeholder="https://codepen.io/" maxlength="50" required>
                    </li>
                    <li>
                        <label for="year">Year</label>
                        <input id="year" name="year" type="number" placeholder="2019" required>
                    </li>
                    <li>
                        <label for="category">Type</label>
                        <input id="category" name="category" type="text" placeholder="animadio / perso" maxlength="10" required>
                    </li>
                    <li>
                        <label for="description">Description</label>
                        <textarea id="description" name="description" rows="10" placeholder="Pen Description" maxlength="255" required></textarea>
                    </li>
                </ul>
                <ul>
                    <li>
                        <input type="reset" value="Reset">
                        <input type="submit" value="Create">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" href="{{ url('admin') }}">Quit</a>
    </main>
{% endblock %}
