{% extends 'layout/layout.twig' %}

{% block subtitle %}Edit a Pen{% endblock %}

{% block description %}{% endblock %}

{% block main %}
    <main class="text-center">
        <form class="form" method="post" action={{ url('pen!update', {'id': pen.id}) }}>
            <fieldset>
                <legend>
                    <i class="fab fa-github fa-fw fa-2x" aria-hidden="true"></i>
                </legend>
                <ul>
                    <li>
                        <label for="name">Name</label>
                        <input id="name" name="name" type="text" maxlength="50" required value="{{ pen.name }}">
                    </li>
                    <li>
                        <label for="link">Link</label>
                        <input id="link" name="link" type="text" maxlength="50" required value="{{ pen.link }}">
                    </li>
                    <li>
                        <label for="year">Year</label>
                        <input id="year" name="year" type="number" required value="{{ pen.year }}">
                    </li>
                    <li>
                        <label for="category">Type</label>
                        <input id="category" name="category" type="text" maxlength="10" required value="{{ pen.category }}">
                    </li>
                    <li>
                        <label for="description">Description</label>
                        <textarea id="description" name="description" rows="5" maxlength="255" required>{{ pen.description }}</textarea>
                    </li>
                </ul>
                <ul>
                    <li>
                        <input type="reset" value="Reset">
                        <input type="submit" value="Update">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" href="{{ url('admin') }}">Quit</a>
    </main>
{% endblock %}
